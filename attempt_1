Button button = new Button(this);
button.setText("text");
ImageView buttonImage = new ImageView(this);
buttonImage.setImageURI(Uri.parse("https://upload.wikimedia.org/wikipedia/commons/d/d8/Example.jpg"));
button.setCompoundDrawablesWithIntrinsicBounds(null, null, buttonImage, null);
button.setOnClickListener(new View.OnClickListener() {
    @Override
    public void onClick(View view) {
        Intent intent = new Intent(this, NewScreen.class);
        startActivity(intent);
    }
});
