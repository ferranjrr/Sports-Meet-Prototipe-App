Button button = new Button (this);
button.setText("Tennis");
button.setBackgroundResource("https://www.google.com/search?q=tenis+image&oq=tenis+image&aqs=chrome..69i57.5136j0j7&sourceid=chrome&ie=UTF-8#imgrc=dJJWKLYis9kmQM");
button.setOnClickListener(new View.OnClickListener() {
    @Override
    public void onClick(View view) {
        Intent intent = new Intent(this, NewScreen.class);
        startActivity(intent);
    }
});
layout.addView(button);
